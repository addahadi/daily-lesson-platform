---
import { getFeaturedCourses } from "../api/course.api";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const platformName = "DevLevelUp";

const features = [
  {
    title: "Gamified Learning",
    description:
      "Earn XP, unlock achievements, and keep your streak alive while leveling up your coding skills.",
    icon: `<svg class="w-12 h-12" fill="none" stroke="#F97316" stroke-width="2" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
             <circle cx="12" cy="12" r="10" stroke="#374151" stroke-width="2" />
           </svg>`,
  },
  {
    title: "Track Your Progress",
    description:
      "See your learning journey with detailed progress tracking and personalized growth insights.",
    icon: `<svg class="w-12 h-12" fill="none" stroke="#F97316" stroke-width="2" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" d="M3 3v18h18" />
             <path stroke-linecap="round" stroke-linejoin="round" d="M7 13l3 3 7-7" />
           </svg>`,
  },
  {
    title: "Learn lessons",
    description: "Engage with interactive lessons and solve coding challenges",
    icon: `<svg class="w-12 h-12" fill="none" stroke="#F97316" stroke-width="2" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" d="M12 2l9 4.5v11L12 22l-9-4.5v-11z" />
           </svg>`,
  },
  {
    title: "Write Notes",
    description:
      "Take notes, jot down ideas, and keep track of your learning in one place.",
    icon: `<svg class="w-12 h-12" fill="none" stroke="#F97316" stroke-width="2" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5V4H2v16h5" />
             <circle cx="12" cy="10" r="3" />
           </svg>`,
  },
];

const featuredCourses = await getFeaturedCourses();
---

<BaseLayout>
  <Navbar />

  <!-- Hero -->
  <section class="flex flex-col-reverse md:flex-row items-center justify-between max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 lg:py-20">
    <!-- Left: Text content -->
    <div class="max-w-xl text-center md:text-left mt-8 md:mt-0">
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 leading-tight dark:text-gray-100">
        Level Up Your <span class="text-orange-500">Developer Skills</span>
      </h1>
      <p class="mt-4 text-gray-600 dark:text-gray-300 text-base sm:text-lg md:text-xl">
        {platformName} helps you grow as a developer through interactive lessons, quizzes, and hands-on projects. Track your progress, earn XP, and reach new levels in your coding journey.
      </p>

      <div class="mt-6 flex flex-col sm:flex-row gap-4 sm:justify-start justify-center">
        <a
          href="/signup"
          class="px-6 py-3 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition"
        >
          Get Started
        </a>
      </div>
    </div>

    <!-- Right: Image -->
    <div class="flex justify-center md:justify-end">
      <img
        src="../../public/hero_illustration.svg"
        alt="Learning Illustration"
        class="w-full max-w-sm sm:max-w-md md:max-w-lg"
      />
    </div>
  </section>

  <!-- Features -->
  <section class="py-12 sm:py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100">
        Why Learn with {platformName}?
      </h2>
      <p class="mt-4 text-gray-600 dark:text-gray-300 max-w-2xl mx-auto text-sm sm:text-base md:text-lg">
        Learn smarter with gamified challenges — gain XP, build streaks, and see your skills grow with every lesson.
      </p>

      <!-- Features Grid -->
      <div class="mt-12 grid gap-6 sm:gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
        {features.map((feature) => (
          <div class="p-6 bg-white dark:bg-gray-800 rounded-2xl shadow hover:shadow-lg transition">
            <div class="mb-4 flex justify-center items-center">
              <span set:html={feature.icon}></span>
            </div>
            <h3 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-gray-100">
              {feature.title}
            </h3>
            <p class="mt-2 text-gray-600 dark:text-gray-300 text-sm sm:text-base">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Courses -->
  <section class="py-12 sm:py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100">
        Explore Our Courses
      </h2>
      <p class="mt-4 text-gray-600 dark:text-gray-300 text-base sm:text-lg">
        Learn by building — each course is packed with interactive lessons and quizzes to help you reinforce your knowledge.
      </p>

      <div class="mt-12 grid gap-6 sm:gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-3">
        {featuredCourses?.map((featuredCourse) => (
          <a
            href={`courses/${featuredCourse.slug}`}
            class="group block rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700 hover:shadow-lg transition"
          >
            <img
              src={featuredCourse.img_url}
              alt={featuredCourse.title}
              class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
            />
            <div class="p-6 text-left">
              <h3 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-gray-100 group-hover:text-orange-500">
                {featuredCourse.title}
              </h3>
              <p class="mt-2 text-gray-600 dark:text-gray-300 text-sm sm:text-base">
                {featuredCourse.description}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Footer -->
  <Footer />
</BaseLayout>
