---
import { getFeaturedCourses } from "../api/course.api";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const platformName = "DevLevelUp";

const features = [
  {
    title: "Gamified Learning",
    description:
      "Earn XP, unlock achievements, and keep your streak alive while leveling up your coding skills.",
    icon: `<svg className="w-12 h-12 mx-auto mb-4" fill="none" stroke="#F97316" strokeWidth="2" viewBox="0 0 24 24">
             <path strokeLinecap="round" strokeLinejoin="round" d="M12 4v16m8-8H4" />
             <circle cx="12" cy="12" r="10" stroke="#374151" strokeWidth="2" />
           </svg>`,
  },
  {
    title: "Track Your Progress",
    description:
      "See your learning journey with detailed progress tracking and personalized growth insights.",
    icon: `<svg className="w-12 h-12 mx-auto mb-4" fill="none" stroke="#F97316" strokeWidth="2" viewBox="0 0 24 24">
             <path strokeLinecap="round" strokeLinejoin="round" d="M3 3v18h18" />
             <path strokeLinecap="round" strokeLinejoin="round" d="M7 13l3 3 7-7" />
           </svg>`,
  },
  {
    title: "Learn lessons",
    description:
      "Engage with interactive lessons and solve coding challenges",
    icon: `<svg className="w-12 h-12 mx-auto mb-4" fill="none" stroke="#F97316" strokeWidth="2" viewBox="0 0 24 24">
             <path strokeLinecap="round" strokeLinejoin="round" d="M12 2l9 4.5v11L12 22l-9-4.5v-11z" />
           </svg>`,
  },
  {
    title: "Write Notes",
    description:
      "Take notes, jot down ideas, and keep track of your learning in one place.",
    icon: `<svg className="w-12 h-12 mx-auto mb-4" fill="none" stroke="#F97316" strokeWidth="2" viewBox="0 0 24 24">
             <path strokeLinecap="round" strokeLinejoin="round" d="M17 20h5V4H2v16h5" />
             <circle cx="12" cy="10" r="3" />
           </svg>`,
  },
];



const featuredCourses = await getFeaturedCourses();

console.log(featuredCourses)
---

<BaseLayout>
  <Navbar />

  <!-- Hero -->
  <section class="flex flex-col-reverse md:flex-row items-center justify-between max-w-6xl mx-auto px-6 py-16">
    <!-- Left: Text content -->
    <div class="max-w-xl text-center md:text-left">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 leading-tight">
        Level Up Your <span class="text-orange-500">Developer Skills</span>
      </h1>
      <p class="mt-4 text-gray-600 text-lg">
        {platformName} helps you grow as a developer through interactive lessons, quizzes, and hands-on projects. Track your progress, earn XP, and reach new levels in your coding journey.
      </p>

      <div class="mt-6 flex flex-col sm:flex-row gap-4 sm:justify-start justify-center">
        <a
          href="/signup"
          class="px-6 py-3 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition"
        >
          Get Started
        </a>
        <a
          href="/courses"
          class="px-6 py-3 bg-gray-100 text-gray-800 rounded-lg hover:bg-gray-200 transition"
        >
          Browse Courses
        </a>
      </div>
    </div>

    <!-- Right: Image -->
    <div class="mb-8 md:mb-0 flex justify-center md:justify-end">
      <img
        src="../../public/hero_illustration.svg"
        alt="Learning Illustration"
        class="w-full max-w-md"
      />
    </div>
  </section>

  <!-- Features -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900">
        Why Learn with {platformName}?
      </h2>
      <p class="mt-4 text-gray-600 max-w-2xl mx-auto">
        Learn smarter with gamified challenges — gain XP, build streaks, and see your skills grow with every lesson.
      </p>

      <!-- Features Grid -->
      <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {features.map((feature) => (
          <div class="p-6 bg-white rounded-2xl shadow hover:shadow-lg transition">
            <div class="w-12 h-12 mb-4">
              <span set:html={feature.icon} class="w-full"></span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900">
              {feature.title}
            </h3>
            <p class="mt-2 text-gray-600">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Courses -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-gray-900">
        Explore Our Courses
      </h2>
      <p class="mt-4 text-lg text-gray-600">
        Learn by building — each course is packed with interactive lessons and quizzes to help you reinforce your knowledge.
      </p>

      <div class="mt-12 grid gap-8 md:grid-cols-3">
        {featuredCourses?.map((featuredCourse) => (
          <a href={`courses/${featuredCourse.slug}`} class="group block rounded-xl overflow-hidden border border-gray-200 hover:shadow-lg transition">
            <img src={featuredCourse.img_url} alt={featuredCourse.title} class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="p-6 text-left">
              <h3 class="text-xl font-semibold text-gray-900 group-hover:text-orange-500">
                {featuredCourse.title}
              </h3>
              <p class="mt-2 text-gray-600">
                {featuredCourse.description}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Footer -->
  <Footer />
</BaseLayout>
