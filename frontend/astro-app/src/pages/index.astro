---

import Navbar from "../components/Navbar.astro";
import BaseLayout from "../layouts/BaseLayout.astro";



const plaformName = "Learning dz"
---

<BaseLayout>
	<Navbar />
  <!-- Hero -->
    <section class="flex flex-col-reverse md:flex-row items-center justify-between max-w-6xl mx-auto px-6 py-16">
	
	<!-- Left: Text content -->
	<div class="max-w-xl text-center md:text-left">
		<h1 class="text-4xl sm:text-5xl font-bold text-gray-900  leading-tight">
		Learn to Code <span class="text-orange-500">Every Day</span>
		</h1>
		<p class="mt-4 text-gray-600  text-lg">
		{plaformName} helps you master coding with daily lessons, quizzes, and hands-on projects.
		Stay consistent, track progress, and level up your skills.
		</p>
		
		<div class="mt-6 flex flex-col sm:flex-row gap-4 sm:justify-start justify-center">
		<a
			href="/signup"
			class="px-6 py-3 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition"
		>
			Get Started
		</a>
		<a
			href="/courses"
			class="px-6 py-3 bg-gray-100 text-gray-800 rounded-lg hover:bg-gray-200 transition"
		>
			Browse Courses
		</a>
		</div>
  	</div>

  <!-- Right: Image -->
	<div class="mb-8 md:mb-0 flex justify-center md:justify-end">
		<img
		src="../../public/hero_illustration.svg"
		alt="Learning Illustration"
		class="w-full max-w-md"
		/>
	</div>
	</section>


  <!-- Features -->
  <section class="py-16 px-6 max-w-6xl mx-auto grid gap-8 sm:grid-cols-3">
    <div>
      <h3 class="text-xl font-semibold">Daily Lessons</h3>
      <p class="text-gray-600 dark:text-gray-300">Short, focused lessons every day.</p>
    </div>
    <div>
      <h3 class="text-xl font-semibold">Track Progress</h3>
      <p class="text-gray-600 dark:text-gray-300">XP, streaks, and achievements keep you motivated.</p>
    </div>
    <div>
      <h3 class="text-xl font-semibold">Quizzes & Projects</h3>
      <p class="text-gray-600 dark:text-gray-300">Test your knowledge and build real projects.</p>
    </div>
  </section>

  <!-- Courses -->
  <section class="py-16 px-6 max-w-6xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-8">Explore Our Courses</h2>
    <div class="grid gap-6 sm:grid-cols-3">
      <div class="border p-6 rounded-lg shadow">
        <h4 class="font-semibold text-lg">React.js</h4>
        <p class="text-gray-600 dark:text-gray-300">Intermediate course on real-world web apps.</p>
      </div>
      <div class="border p-6 rounded-lg shadow">
        <h4 class="font-semibold text-lg">TypeScript</h4>
        <p class="text-gray-600 dark:text-gray-300">Build scalable frontends with strong types.</p>
      </div>
      <div class="border p-6 rounded-lg shadow">
        <h4 class="font-semibold text-lg">Supabase</h4>
        <p class="text-gray-600 dark:text-gray-300">Full backend power without hassle.</p>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 px-6 max-w-4xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-8">What Our Learners Say</h2>
    <blockquote class="italic text-gray-600 dark:text-gray-300">
      “The bite-sized format makes it easy to stay consistent. I’m building projects daily now!”
    </blockquote>
    <p class="mt-2 font-semibold">— Alex, Frontend Developer</p>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-blue-600 text-white text-center px-6">
    <h2 class="text-3xl font-bold">Join thousands of daily learners</h2>
    <p class="mt-4">Start your journey now. No credit card required.</p>
    <a
      href="/signup"
      class="mt-6 inline-block px-8 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition"
    >
      Get Started Free
    </a>
  </section>

  <!-- Footer -->
  <footer class="py-8 text-center text-sm text-gray-500 dark:text-gray-400">
    © 2025 Daily Coding Lessons. All rights reserved.
  </footer>
</BaseLayout>
