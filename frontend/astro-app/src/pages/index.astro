---
import { getFeaturedCourses } from "../api/course.api";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const platformName = "DevLevelUp";

const features = [
  {
    title: "Gamified Learning",
    description:
      "Earn XP, unlock achievements, and keep your streak alive while leveling up your coding skills.",
    icon: `<svg class="w-10 h-10 sm:w-12 sm:h-12" fill="none" stroke="#F97316" stroke-width="2" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
             <circle cx="12" cy="12" r="10" stroke="#374151" stroke-width="2" />
           </svg>`,
  },
  {
    title: "Track Your Progress",
    description:
      "See your learning journey with detailed progress tracking and personalized growth insights.",
    icon: `<svg class="w-10 h-10 sm:w-12 sm:h-12" fill="none" stroke="#F97316" stroke-width="2" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" d="M3 3v18h18" />
             <path stroke-linecap="round" stroke-linejoin="round" d="M7 13l3 3 7-7" />
           </svg>`,
  },
  {
    title: "Learn lessons",
    description: "Engage with interactive lessons and solve coding challenges",
    icon: `<svg class="w-10 h-10 sm:w-12 sm:h-12" fill="none" stroke="#F97316" stroke-width="2" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" d="M12 2l9 4.5v11L12 22l-9-4.5v-11z" />
           </svg>`,
  },
  {
    title: "Write Notes",
    description:
      "Take notes, jot down ideas, and keep track of your learning in one place.",
    icon: `<svg class="w-10 h-10 sm:w-12 sm:h-12" fill="none" stroke="#F97316" stroke-width="2" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5V4H2v16h5" />
             <circle cx="12" cy="10" r="3" />
           </svg>`,
  },
];

const featuredCourses = await getFeaturedCourses();
---

<BaseLayout>
  <Navbar />

  <!-- Hero Section -->
  <section class="flex flex-col-reverse lg:flex-row items-center justify-between max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 lg:py-16 xl:py-20">
    <!-- Left: Text content -->
    <div class="w-full lg:w-1/2 max-w-xl text-center lg:text-left mt-8 lg:mt-0">
      <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-gray-900 leading-tight">
        Level Up Your <span class="text-orange-500">Developer Skills</span>
      </h1>
      <p class="mt-4 sm:mt-6 text-gray-600 text-sm sm:text-base md:text-lg lg:text-xl leading-relaxed">
        {platformName} helps you grow as a developer through interactive lessons, quizzes, and hands-on projects. Track your progress, earn XP, and reach new levels in your coding journey.
      </p>

      <div class="mt-6 sm:mt-8 flex flex-col sm:flex-row gap-3 sm:gap-4 items-center sm:justify-center lg:justify-start">
        <a
          onclick="window.location.href='https://devlevelup-dashboard.vercel.app/signup'"
          class="w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 bg-orange-500 text-white text-sm sm:text-base font-semibold rounded-lg hover:bg-orange-600 transition-colors duration-200 shadow-lg hover:shadow-xl"
        >
          Get Started
        </a>
      </div>
    </div>

    <!-- Right: Image -->
    <div class="w-full lg:w-1/2 flex justify-center lg:justify-end">
      <img
        src="../../public/hero_illustration.svg"
        alt="Learning Illustration"
        class="w-full max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl"
      />
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-12 sm:py-16 lg:py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 lg:mb-16">
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 sm:mb-6">
          Why Learn with {platformName}?
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto text-sm sm:text-base md:text-lg lg:text-xl leading-relaxed">
          Learn smarter with gamified challenges — gain XP, build streaks, and see your skills grow with every lesson.
        </p>
      </div>

      <!-- Features Grid -->
      <div class="grid gap-6 sm:gap-8 lg:gap-10 grid-cols-1 sm:grid-cols-2 lg:grid-cols-4">
        {features.map((feature) => (
          <div class="p-6 sm:p-8 bg-white rounded-2xl shadow-md hover:shadow-lg transition-shadow duration-300 text-center">
            <div class="mb-4 sm:mb-6 flex justify-center items-center">
              <span set:html={feature.icon}></span>
            </div>
            <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2 sm:mb-3">
              {feature.title}
            </h3>
            <p class="text-gray-600 text-sm sm:text-base leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Courses Section -->
  <section class="py-12 sm:py-16 lg:py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 lg:mb-16">
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 sm:mb-6">
          Explore Our Courses
        </h2>
        <p class="text-gray-600 text-sm sm:text-base md:text-lg lg:text-xl leading-relaxed max-w-3xl mx-auto">
          Learn by building — each course is packed with interactive lessons and quizzes to help you reinforce your knowledge.
        </p>
      </div>

      <div class="grid gap-6 sm:gap-8 lg:gap-10 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
        {featuredCourses?.map((featuredCourse) => (
          <a
            href={`courses/${featuredCourse.slug}`}
            class="group block rounded-xl overflow-hidden border border-gray-200 hover:shadow-lg transition-all duration-300 bg-white"
          >
            <div class="overflow-hidden">
              <img
                src={featuredCourse.img_url}
                alt={featuredCourse.title}
                class="w-full h-40 sm:h-48 md:h-52 object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-4 sm:p-6">
              <h3 class="text-lg sm:text-xl font-semibold text-gray-900 group-hover:text-orange-500 transition-colors duration-200 mb-2 sm:mb-3">
                {featuredCourse.title}
              </h3>
              <p class="text-gray-600 text-sm sm:text-base leading-relaxed">
                {featuredCourse.description}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Footer -->
  <Footer />
</BaseLayout>