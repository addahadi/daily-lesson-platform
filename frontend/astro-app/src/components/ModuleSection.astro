---
import Module from "./Module.astro";

const { modules } = Astro.props;
---

<section class="w-full px-4 sm:px-6 lg:px-8 py-6 sm:py-10 mb-16 sm:mb-20">
  <h2 class="text-lg sm:text-xl md:text-2xl font-semibold mb-4 sm:mb-6 md:mb-8 text-gray-900">
    Course Modules
  </h2>

  {modules.length > 0 ? (
    <div class="w-full rounded-lg sm:rounded-xl lg:rounded-2xl border border-gray-200 bg-gray-50 shadow-sm overflow-hidden">
      <div class="divide-y divide-gray-200">
        {modules.map(
          (module: {
            title: string;
            description: string;
            order_index: number;
            created_at: string;
            lessons: any[];
          }) => (
            <div class="transition-colors hover:bg-gray-100/50">
              <Module {...module} />
            </div>
          )
        )}
      </div>
    </div>
  ) : (
    <div class="w-full rounded-lg sm:rounded-xl lg:rounded-2xl border border-gray-200 bg-white shadow-sm p-6 sm:p-8 md:p-12 text-center">
      <div class="max-w-md mx-auto">
        <div class="w-12 h-12 sm:w-16 sm:h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
          <svg
            class="w-6 h-6 sm:w-8 sm:h-8 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
            />
          </svg>
        </div>
        <h3 class="text-base sm:text-lg font-medium text-gray-900 mb-1 sm:mb-2">
          No modules available
        </h3>
        <p class="text-gray-500 text-sm sm:text-base">
          Course modules will appear here once they're added.
        </p>
      </div>
    </div>
  )}
</section>
