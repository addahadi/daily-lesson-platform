---
import Module from "./Module.astro";

const {modules} = Astro.props
---

<section class="w-full px-4 sm:px-6 lg:px-8 py-6 sm:py-8 mb-16 sm:mb-20">
  <h2 class="text-xl sm:text-2xl font-semibold mb-6 sm:mb-8 text-gray-900">
    Course Modules
  </h2>

  {modules.length > 0 ? (
    <div class="w-full rounded-xl sm:rounded-2xl border border-gray-200 bg-gray-100 shadow-sm overflow-hidden">
      <div class="divide-y divide-gray-200">
        {modules.map((module : { title: string; description: string; order_index: number; created_at: string; lessons: any[]}) => (
          <div class="transition-colors">
            <Module {...module} />
          </div>
        ))}
      </div>
    </div>
  ) : (
    <div class="w-full rounded-xl sm:rounded-2xl border border-gray-200 bg-white shadow-sm p-8 sm:p-12 text-center">
      <div class="max-w-md mx-auto">
        <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
          <svg
            class="w-8 h-8 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              strokeLinecap="round"
              strokeLinejoin="round"
              strokeWidth="2"
              d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
            />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">
          No modules available
        </h3>
        <p class="text-gray-500 text-sm">
          Course modules will appear here once they're added.
        </p>
      </div>
    </div>
  )}
</section>
